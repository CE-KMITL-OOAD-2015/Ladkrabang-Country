<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awakenguys.kmitl.ladkrabangcountry.Announce_Create">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Topic"
            android:gravity="top"
            android:textColor="@color/orange"
            android:id="@+id/topic_Ann"
            android:layout_weight="0.10"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Contect"
            android:gravity="top"
            android:textColor="@color/orange"
            android:id="@+id/content_Ann"
            android:layout_weight="0.49"
            android:layout_marginTop="20dp" />
        <Button
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="announce"
            android:background="@color/orange"
            android:id="@+id/announceButton"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:onClick="Announce_list"/>
        </LinearLayout>
</RelativeLayout>
