<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        >
         <Button
                android:text="Announcement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:background="@drawable/buttom_frame"
                android:longClickable="false"
                android:textColor="#ff000000"
                android:padding="10sp"/>

        <Button
            android:text="KMITL BUILDING"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:background="@drawable/buttom_frame"
            android:longClickable="false"
            android:textColor="#ff000000"
            android:onClick="Menu_Building"/>


        <Button
            android:text="Food and Place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff030001"
            android:background="@drawable/buttom_frame"
            android:onClick="Menu_Reviewing"
            />

        <Button
            android:text="Transpotation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:textColor="#ff030001"
            android:background="@drawable/buttom_frame"
            android:onClick="Menu_Tran"
            />
        <Button
            android:text="Contact Us"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff030001"
            android:background="@drawable/buttom_frame"
            android:onClick = "contact"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true">
        <ImageView
            android:src = "@drawable/pic_mainnew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="false"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/D:/GitHub/Ladkrabang-Country/LadkrabangCountry-Master/app/src/main/res/layout/activity_main.xml -->