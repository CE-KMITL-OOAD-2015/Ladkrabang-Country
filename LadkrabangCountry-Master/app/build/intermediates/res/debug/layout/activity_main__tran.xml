
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awakenguys.kmitl.ladkrabangcountry.Main_Tran"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:id="@+id/linearLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="175dp"
        android:layout_marginBottom="280dp"
        android:weightSum="1">



        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/van"
            android:background="@drawable/newvan3"
            android:layout_gravity="bottom"
            android:fontFamily="@string/abc_action_bar_home_description_format"
            android:onClick="Menu_Van"
            android:textSize="20dp"
            android:focusable="false" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="280dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/train"
            android:background="@drawable/newtrain3"
            android:layout_gravity="bottom"
            android:fontFamily="@string/abc_action_bar_home_description_format"
            android:textSize="20dp"
            android:onClick="Menu_Train" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="175dp"
        android:layout_marginTop="280dp"
        android:id="@+id/linearLayout4">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bus"
            android:background="@drawable/newbus3"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@string/abc_action_bar_home_description_format"
            android:onClick="Menu_Bus"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="175dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/category"
            android:background="@drawable/newmotorcy4"
            android:fontFamily="@string/abc_action_bar_home_description_format"
            android:textSize="20dp"
            android:onClick="Menu_Motorcycle" />
    </LinearLayout>


</RelativeLayout>
